{
  "dashboard": {
    "id": null,
    "title": "AnchorChain Metrics",
    "tags": ["anchorchain"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Transaction Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(anchorchain_tx_success_total[5m])",
            "legendFormat": "Success Rate"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Transaction Failures",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(anchorchain_tx_failed_total[5m])",
            "legendFormat": "Failure Rate"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Resurrection Verification",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(resurrection_verify_pass_total[5m])",
            "legendFormat": "Pass"
          },
          {
            "expr": "rate(resurrection_verify_fail_total[5m])",
            "legendFormat": "Fail"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Transaction Cost (Gwei)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(anchorchain_tx_cost_gwei_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(anchorchain_tx_cost_gwei_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Confirmation Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(anchorchain_tx_confirm_time_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(anchorchain_tx_confirm_time_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "5s"
  }
}
