{
  "dashboard": {
    "id": null,
    "title": "AnchorChain Phase 2 Monitoring",
    "tags": ["anchorchain", "immortal-logic", "phase2"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Transaction Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(anchorchain_tx_success_total[5m])",
            "legendFormat": "Success Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.8},
                {"color": "green", "value": 0.95}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Resurrection Verification Status",
        "type": "stat",
        "targets": [
