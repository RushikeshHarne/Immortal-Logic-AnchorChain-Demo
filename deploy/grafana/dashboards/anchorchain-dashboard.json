{
  "dashboard": {
    "id": null,
    "title": "AnchorChain Monitoring",
    "tags": ["anchorchain", "blockchain"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Transaction Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(anchorchain_tx_success_total[5m])",
            "legendFormat": "Success Rate"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Resurrection Verification",
        "type": "stat",
        "targets": [
          {
            "expr": "resurrection_verify_pass_total",
            "legendFormat": "Pass"
          },
          {
            "expr": "resurrection_verify_fail_total",
            "legendFormat": "Fail"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Transaction Cost (GWEI)",
        "type": "graph",
        "targets": [
          {
            "expr": "anchorchain_tx_cost_gwei",
            "legendFormat": "Cost GWEI"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Confirmation Time",
        "type": "graph",
        "targets": [
          {
            "expr": "anchorchain_tx_confirm_time_seconds",
            "legendFormat": "Confirmation Time (s)"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "5s"
  }
}
