{
  "dashboard": {
    "id": null,
    "title": "AnchorChain Metrics",
    "tags": ["anchorchain"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Successful Transactions",
        "type": "stat",
        "targets": [
          {
            "expr": "anchorchain_tx_ok_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Failed Transactions",
        "type": "stat",
        "targets": [
          {
            "expr": "anchorchain_tx_err_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      }
    ],
    "time": {
      "from": "now-5m",
      "to": "now"
    },
    "refresh": "5s"
  }
}
